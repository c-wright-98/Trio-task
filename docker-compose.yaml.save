version: "3.8"
services: 
  mysql:
    image: cwright98/trio-db:{$version}
    build: ./db
    enviroment:
      MYSQL_ROOT_PASSWORD: ${DB_PASSWORD}
    volumes:
    - type: volume
      source: trio-vol
      target: /var/lib/mysql
    networks:
    - trio-net
  flask-app:
    image: cwright98/trio-app:${version}
    build: ./flask-app
    enviroment:
      MYSQL_ROOT_PASSWORD: ${DB_PASSWORD}
    netowrks:
    - trio-net
    deploy:
      replicas: 3

  nginx:
    image: nginx:alpine
    volumes:
    - type: bind
      source: ./nginx/nginx.conf
      targert: etc
networks:
  trio-net:
volumes:
  trio-vol:
